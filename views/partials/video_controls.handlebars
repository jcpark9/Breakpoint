        <i class="fa fa-step-backward control-addBreakpoint with-text"></i>
        <span class="control-helper finish">
            Edit Start
        </span>
    </a>

    <a href="" class="control-button control-button-with-text" ng-show="hasCurrentBreakpoint()" ng-click="clickedSetEndTime()">
        <i class="fa fa-step-forward control-addBreakpoint with-text"></i>
        <span class="control-helper finish">
            Set End
        </span>
    </a>

    <a class="control-button control-button-with-text" href="" ng-show="hasCurrentBreakpoint()"  ng-click="clickedLoopOnCurrent(event)" >
        <i class="fa fa-repeat control-repeat with-text" ng-class="{active: loopOnCurrent}" ></i>
        <span class="control-helper">
            Loop on BP
        </span>
    </a>
